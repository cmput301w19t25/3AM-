<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvActions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp">

        <ImageView
            android:id="@+id/ivBookPhoto"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_library_books_black_24dp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="BOOK TITLE"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivBookPhoto"
            app:layout_constraintTop_toTopOf="@+id/ivBookPhoto" />

        <LinearLayout
            android:id="@+id/llBookDescription"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/ivBookPhoto"
            app:layout_constraintTop_toBottomOf="@+id/tvName">

            <TextView
                android:id="@+id/tvAuthorTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Author: "
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sample Name"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvDivider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" | "
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvISBNTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ISBN:"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvISBN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X-XXXXXX-XXXXXX"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llRequestsField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@+id/ivBookPhoto"
            app:layout_constraintTop_toBottomOf="@+id/llBookDescription">

            <TextView
                android:id="@+id/tvRequestsTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Requests: "
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvRequests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="X"
                android:textColor="@color/common_google_signin_btn_text_dark_focused"
                android:textSize="10sp" />
        </LinearLayout>



    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>