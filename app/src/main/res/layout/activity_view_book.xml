<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ViewBookActivity">

    <LinearLayout
        android:id="@+id/llViewBook"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/clViewBookBackground"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/dark_grey_default">


            <ImageView
                android:id="@+id/ivViewBookPhoto"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginStart="48dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_library_books_black_24dp"
                android:layout_marginLeft="48dp" />

            <LinearLayout
                android:id="@+id/llViewBookBackgroundText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivViewBookPhoto"
                app:layout_constraintTop_toTopOf="@+id/ivViewBookPhoto"
                android:layout_marginLeft="16dp">

                <TextView
                    android:id="@+id/tvViewBookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Book Title"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvViewBookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Author Name"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvViewBookGenre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="Genre"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvViewBookISBNTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="ISBN: "
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvViewBookISBN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="X-XXXXXX-XXXXXX"
                        android:textColor="@color/common_google_signin_btn_text_dark_default"
                        android:textSize="12sp" />

                </LinearLayout>



            </LinearLayout>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
            android:id="@+id/llViewBookInfoHolder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="4dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvViewBookDescriptionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="8dp"
                android:paddingTop="4dp"
                android:paddingRight="8dp"
                android:text="Description"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <View
                android:id="@+id/vViewBookLineDivider1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvViewBookDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean gravida pharetra convallis. Cras eu bibendum massa, ut feugiat augue. Curabitur eu nulla in purus egestas sodales. Mauris porttitor rutrum arcu, quis elementum mauris iaculis ac. Phasellus ut laoreet dolor. Vestibulum dignissim tristique quam vitae facilisis. Duis quam ligula, pharetra eget luctus a, porttitor sit amet tellus. Pellentesque ut lorem sed purus imperdiet tempor vel non justo. Quisque in ligula ultricies, hendrerit arcu sed, laoreet nunc. Duis facilisis, elit non efficitur mollis, elit ex pellentesque erat, ut cursus velit nibh non nisl. Etiam tristique aliquet diam non accumsan. Nullam volutpat ex nisi, vel laoreet lacus finibus nec. "
                android:textColor="@color/dark_grey_default" />

            <TextView
                android:id="@+id/tvRequestsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Requests"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />

            <View
                android:id="@+id/vViewBookLineDivider2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@android:color/darker_gray" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvViewBookRequests"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:nestedScrollingEnabled="true" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bOwnerHandover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/default_button_color_blue"
        android:fontFamily="@font/open_sans"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="CONFIRM HANDOVER"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:typeface="normal"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>