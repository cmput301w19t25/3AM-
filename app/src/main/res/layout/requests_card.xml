<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvActions"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="90dp">

        <ImageView
            android:id="@+id/ivRequesterPhoto"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_account_circle_blue_24dp" />

        <TextView
            android:id="@+id/tvCardBookTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/open_sans"
            android:text="Requester Name"
            android:textColor="@color/dark_grey_default"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ivRequesterPhoto"
            app:layout_constraintTop_toTopOf="@+id/ivRequesterPhoto" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            app:layout_constraintStart_toStartOf="@+id/tvCardBookTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvCardBookTitle" />

        <ImageView
            android:id="@+id/ivRejectRequestButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close_red_24dp" />

        <ImageView
            android:id="@+id/ivAcceptRequestButton"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivRejectRequestButton"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_check_green_24dp" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>